{
  "customize": {
    "build_dir_name": "ppcg",
    "env_prefix": "CK_ENV_COMPILER_PPCG",
    "languages": [
      "C",
      "CPP"
    ],
    "only_for_host_os_tags": [
      "linux"
    ],
    "only_for_target_os_tags": [
      "linux"
    ],
    "skip_add_to_bin": "no",
    "skip_add_to_ld_path": "yes",
    "skip_add_to_path": "no",
    "source_to_source": "yes"
  },
  "env": {
    "CK_AR": "$#tool_prefix#$ar",
    "CK_ASM_EXT": ".s",
    "CK_CC": "$#tool_prefix#$ppcg",
    "CK_COMPILER_FLAGS_OBLIGATORY": "",
    "CK_DLL_EXT": ".so",
    "CK_EXE_EXT": ".out",
    "CK_FLAGS_CREATE_ASM": "-S",
    "CK_FLAGS_CREATE_OBJ": "-c",
    "CK_FLAGS_DLL": "-shared -fPIC",
    "CK_FLAGS_DLL_EXTRA": "-ldl",
    "CK_FLAGS_OUTPUT": "-o ",
    "CK_FLAGS_STATIC_BIN": "-static -fPIC",
    "CK_FLAGS_STATIC_LIB": "-fPIC",
    "CK_FLAG_PREFIX_INCLUDE": "-I",
    "CK_FLAG_PREFIX_LIB_DIR": "-L",
    "CK_FLAG_PREFIX_VAR": "-D",
    "CK_LB": "$#tool_prefix#$ar rcs",
    "CK_LB_OUTPUT": "-o ",
    "CK_LD_FLAGS_EXTRA": "-lm -ldl",
    "CK_LIB_EXT": ".a",
    "CK_MAKE": "make",
    "CK_OBJ_EXT": ".o",
    "CK_PROFILER": "gprof"
  },
  "soft_name": "PPCG compiler",
  "tags": [
    "compiler",
    "source-to-source",
    "ppcg",
    "lang-c"
  ],
  "tool": "ppcg",
  "version": {
    "cmd": "--version > $#filename#$ 2>&1",
    "split": ".",
    "string_after": "",
    "string_before": "version "
  }
}
