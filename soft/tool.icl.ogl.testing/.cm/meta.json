{
  "customize": {
    "add_to_path": "yes",
    "env_prefix": "CK_ENV_TOOL_ICL_OGL_TESTING",
    "only_for_host_os_tags": [
      "windows",
      "linux"
    ],
    "only_for_target_os_tags": [
      "windows",
      "linux"
    ]
  },
  "deps": {
    "java_compiler": {
      "local": "yes",
      "name": "Java compiler",
      "sort": 1,
      "tags": "compiler,java"
    },
    "lib-commons-io": {
      "local": "yes",
      "name": "Commons IO library",
      "sort": 6,
      "tags": "lib,commons-io"
    },
    "lib-freeglut": {
      "local": "yes",
      "name": "FreeGLUT library",
      "sort": 30,
      "tags": "lib,freeglut"
    },
    "lib-glew": {
      "local": "yes",
      "name": "GLEW library",
      "sort": 20,
      "tags": "lib,glew"
    },
    "lib-junit": {
      "local": "yes",
      "name": "Junit library",
      "sort": 7,
      "tags": "lib,junit"
    },
    "tool-antlr": {
      "local": "yes",
      "name": "ANTLR tool",
      "sort": 5,
      "tags": "tool,antlr"
    },
    "tool-glslangvalidator": {
      "local": "yes",
      "name": "GLS language validator",
      "sort": 40,
      "tags": "tool,glslangvalidator"
    },
    "tool-thrift": {
      "local": "yes",
      "name": "Thrift compiler",
      "sort": 8,
      "tags": "tool,thrift"
    }
  },
  "soft_name": "ICL OGL testing tool",
  "tags": [
    "tool",
    "icl-ogl-testing"
  ]
}
