{
  "auto_detect": "yes",
  "customize": {
    "check_that_exists": "yes",
    "ck_version": 10,
    "env_prefix": "CK_ENV_LIB_BLAS",
    "file_root_name": "libblas",
    "include_file": "cblas.h",
    "limit_recursion_dir_search": {
      "linux": 3
    },
    "soft_file": {
      "linux": "libblas$#file_ext_dll#$"
    },
    "soft_path_example": {
      "linux": "/usr/lib/libblas.so"
    }
  },
  "soft_name": "BLAS library",
  "tags": [
    "lib",
    "blas",
    "cblas",
    "blas",
    "no-openblas"
  ]
}
