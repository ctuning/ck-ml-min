{
  "auto_detect": "yes",
  "customize": {
    "add_to_path": "yes",
    "build_dir_name": "bazel",
    "check_that_exists": "yes",
    "ck_version": 10,
    "env_prefix": "CK_ENV_TOOL_BAZEL",
    "limit_recursion_dir_search": {
      "linux": 4,
      "win": 4
    },
    "only_for_host_os_tags": [
      "windows",
      "linux"
    ],
    "soft_file": {
      "linux": "bazel",
      "win": "bazel.exe"
    },
    "soft_file_from_host_os": "yes",
    "soft_path_example": {
      "linux": "/usr/bin/bazel"
    },
    "soft_version_cmd": {
      "linux": "version > $#filename#$ 2>&1",
      "win": "version > $#filename#$ 2>&1"
    }
  },
  "deps": {
    "env-msys2": {
      "local": "yes",
      "name": "MSYS2 env",
      "only_for_target_os_tags": [
        "windows"
      ],
      "sort": 20,
      "tags": "env,msys2"
    },
    "java-compiler": {
      "local": "yes",
      "name": "Java compiler",
      "sort": 10,
      "tags": "compiler,lang-java"
    }
  },
  "soft_name": "bazel",
  "tags": [
    "tool",
    "bazel"
  ]
}
