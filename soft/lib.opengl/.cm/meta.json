{
  "auto_detect": "yes",
  "customize": {
    "check_that_exists": "yes",
    "ck_version": 10,
    "env_prefix": "CK_ENV_LIB_OPENGL",
    "limit_recursion_dir_search": {
      "linux": 3,
      "win": 3
    },
    "soft_file_universal": "libGL$#file_ext_dll#$",
    "soft_path_example": {
      "linux": "/usr/lib/x86_64-linux-gnu/libGL.so",
      "win": ""
    }
  },
  "deps": {},
  "soft_name": "OpenGL library",
  "tags": [
    "lib",
    "opengl"
  ]
}
