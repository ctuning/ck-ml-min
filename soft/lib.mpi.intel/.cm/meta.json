{
  "auto_detect": "yes",
  "customize": {
    "add_to_path": "yes",
    "check_that_exists": "yes",
    "ck_version": 10,
    "env_prefix": "CK_ENV_LIB_MPI",
    "limit_recursion_dir_search": {
      "linux": 5,
      "win": 5
    },
    "soft_file": {
      "linux": "mpiicc",
      "win": "mpiicc.exe"
    },
    "soft_path_example": {
      "linux": "",
      "win": ""
    },
    "soft_version_cmd": {
      "linux": "--version > $#filename#$ 2>&1",
      "win": "--version > $#filename#$ 2>&1"
    }
  },
  "deps": {
    "compiler": {
      "local": "yes",
      "name": "Intel C compiler",
      "sort": 1,
      "tags": "compiler,lang-cpp,icc"
    }
  },
  "soft_name": "Intel MPI library",
  "tags": [
    "lib",
    "mpi",
    "intel",
    "mpiicc"
  ]
}
